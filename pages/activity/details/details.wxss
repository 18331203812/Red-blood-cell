page{
  background: #fff;
}
.banner{
  width: 100%;
  height: 422rpx;
}
.banner-img{
  width: 100%;
  height: 100%;
  display: block;
}
.main{
  width: 100%;
  padding: 25rpx 30rpx;
  border-bottom: 10rpx solid #f6f6f6;
}
.title{
  padding: 0 100rpx 0 0;
  position: relative;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.shares-icon{
  width: 46rpx;
  height: 50rpx;
  background: url(data:image/png;base64,) no-repeat center / 26rpx auto;
  position: absolute;
  top: 0;
  right: 0;
}
.con{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.con text{
  font-size: 30rpx;
  color: #ce131b;
  font-weight: bold;
}
.enrolment{
  font-size: 24rpx;
  color: #666666;
}
.time{
  font-size: 24rpx;
  color: #333;
}
.footer{
  width: 100%;
  /* height: 98rpx; */
  box-shadow: 0 0 8rpx rgba(0 , 0, 0, 0.23);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.footer-number{
  font-size: 30rpx;
  color: #ce131b;
  font-weight: bold;
  padding-left: 40rpx;
}
.footer-button{
  width: 384rpx;
  height: 97rpx;
  background: #f62632;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #fff;
  border-radius: 0;
}
.footer-buttons{
   background: #f2f3f5;
   color: #333333;
}
.content{
  padding: 30rpx;
}

.curtain{
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}
.curtain-box{
  width: 92%;
  height: 83vh;
}
.canvas{
  width: 100%;
  height: 100%;
  display: block;
}
.curtains{
  display: none;
}
.box-share-img{
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin-right: 10rpx;
}
.but{
  margin-top: 20rpx;
}

.footer-img{
  display: inherit;
  margin: 0 auto;
  left: 0;
  right: 0;
}
.footer-content{
  width: 48%;
  display:flex;
  padding-left: 30rpx;
  justify-content: space-around;
}
.footer-text{
  font-size: 22rpx;
  color: #999999;
  padding-top: 5rpx;
}
.share-but{
  background: #fff;
}
.share-but::after{
  background: #fff;
  position: static;
  top: 0rpx;
  left: 0rpx;
}
button{
  line-height: normal;
}

.footer-img{
  width:36rpx;
  height:36rpx;
}