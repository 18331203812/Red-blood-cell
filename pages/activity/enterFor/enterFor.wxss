page{
  background: #f2f3f5;
}
.li{
  width: 100%;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.li-name{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.li-input{
  text-align: right;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.marginTop{
  margin-top: 10rpx;
}

.footer{
  width: 100%;
  height: 98rpx;
  box-shadow: 0 0 8rpx rgba(0 , 0, 0, 0.23);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.footer-number{
  font-size: 30rpx;
  color: #ce131b;
  font-weight: bold;
  padding-left: 40rpx;
}
.footer-button{
  width: 384rpx;
  height: 97rpx;
  background: #f62632;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #fff;
  border-radius: 0;
}