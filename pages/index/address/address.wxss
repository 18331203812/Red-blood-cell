.nav{
  width: 80%;
  height: 60rpx;
  background: #f4f3f3;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  margin: 15rpx auto;
  position: relative;
}
.search-box{
  width: 70rpx;
  height: 100%;
  position: absolute;
  right: 20rpx;
  top: 0;
}
.main{
  padding: 34rpx 47rpx 0 47rpx;
}
.main-title{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.main-current{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.con{
  font-size: 26rpx;
  color: #ce131b;
  display: flex;
  align-items: center;
}
.con-icon{
  width: 26rpx;
  height: 26rpx;
  background: url(data:image/png;base64,) no-repeat center / 100% auto;
  margin-right: 10rpx;
}
.main-ul{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 0;
}
.main-li{
  font-size: 26rpx;
  color: #ce131b;
  border-radius: 5rpx;
  border: 1rpx solid #ce131b;
  padding: 0 10rpx;
  margin:  10rpx;
}
.li{
  padding: 35rpx 70rpx;
  font-size: 30rpx;
  color: #333333;
}