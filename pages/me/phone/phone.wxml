<view class="main">
  <view class="main-li">
    <view class="li-name">原手机号</view>
    <input class="li-input" disabled value='{{primaryPhone}}'></input>
  </view>
  <view class="main-li">
    <view class="li-name">新手机号</view>
    <input class="li-input" placeholder="请填写新手机号" bindblur="Phone" placeholder-style="color:#999;font-size:28rpx;"></input>
  </view>
  <view class="main-li">
    <view class="li-name">验证码</view>
    <view class="li-code">
      <input class="li-code-input" placeholder="请输入验证码" bindblur="Code" placeholder-style="font-size: 28rpx; color: #999999;"></input>
      <block wx:if='{{disabled}}'>
        <view class="li-code-but">{{time}}</view>
      </block>
      <block wx:else>
        <view class="li-code-but" bindtap="code">获取验证码</view>
      </block>
    </view>
  </view>
  <button class="li-but" bindtap="Sumbit">完成</button>
</view>