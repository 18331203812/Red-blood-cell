page{
  background: #f2f3f5;
}
.nav{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 88rpx;
  background: #fff;
}
.nav-li{
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #666666;
  position: relative;
}
.category{
  color: #ce131b;
}
.category::after{
  content: "";
  width: 100%;
  height: 4rpx;
  border-radius: 2rpx;
  background: #ce131b;
  position: absolute;
  bottom: 0;
  left: 0;
}
.li{
  margin-top: 10rpx;
  background: #fff;
  padding: 30rpx;
}
.li-con-img{
  width: 140rpx;
  height: 140rpx;
  display: block;
}
.li-nav{
  display: flex;
  justify-content: space-between;
}
.li-nav-number{
  font-size: 24rpx;
  color: #333333;
}
.li-nav-but{
  font-size: 26rpx;
  color: #951a1a;
  border: 1rpx solid #951a1a;
  border-radius: 5rpx;
  padding: 0 10rpx;
}
.li-con-right{
  width: 76%;
}
.li-con{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx dashed #cfcfcf;
  margin-bottom: 18rpx;
}
.li-title{
  font-size: 30rpx;
  color: #333333;
}
.li-integral{
  display: flex;
  justify-content: space-between;
}
.li-ints{
  font-size: 30rpx;
  color: #333333;
}
.li-ints text{
  font-size: 30rpx;
  color: #ce131b;
}
.li-time{
  font-size: 24rpx;
  color: #999999;
}
.li-footer{
  display: flex;
  justify-content: flex-end;
}
.li-footer text{
  font-size: 26rpx;
  color: #333333;
  margin: 0 10rpx;
}
.success{
  color: #129181;
  border: 1rpx solid #129181;
}