.nav{
  width: 100%;
  height: 390rpx;
  position: relative;
  margin-bottom: 110rpx;
}
.nav-background{
  width: 100%;
  height: 100%;
  display: block;
}
.nav-head{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.nav-con{
  width: 70%;
}
.nav-box-head{
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-title{
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  padding-bottom: 10rpx;
}
.nav-text{
  font-size: 24rpx;
  color: #999999;
  padding-top: 10rpx;
}
.nav-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:  30rpx; 
  position: absolute;
  left: 0;
  bottom: -122rpx;
  z-index: 10;
}
.nav-radius{
  width: 100%;
  height: 40rpx;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  bottom: 0;
  left: 0;
  position: absolute;
}
.tabBar{
  width: 100%;
  padding: 0 37rpx;
  display: flex;
  align-items: center;
  height: 62rpx;
}
.tabBar-li{
  margin-right: 60rpx;
  font-size: 30rpx;
  color: #666666;
  height: 100%;
  display: flex;
  padding: 0 8rpx;
  align-items: center;
  position: relative;
}
.category{
  color: #ce131b;
  font-size: 36rpx;
  font-weight: bold;
}
.category::after{
  content:'';
  width: 100%;
  height: 4rpx;
  background: #ce131b;
  position: absolute;
  left: 0;
  bottom: 0;
}
.li{
  width: 100%;
  padding: 35rpx  33rpx 0 33rpx;
  border-bottom: 1rpx solid #e3e3e3;
}
.li-box{
  display: flex;
  justify-content: space-between;
  height: 100%;
}
.li-box-img{
  width: 230rpx;
  height: auto;
  display: block;
}
.li-con{
  width: 62%;
}
.li-con-title{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.li-con-address{
  font-size: 24rpx;
  color: #666666;
    
}
.heat-icon{
 width:80rpx;
 height: 34rpx;
 margin:5rpx 0 0 10rpx;
}
.li-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.li-icon{
  display: flex;
  align-items: center;
}
.li-icon-list{
  font-size: 28rpx;
  color: #999999;
  display: flex;
  align-items: center;
  height: 74rpx;
}
.li-time{
  font-size: 26rpx;
  color: #999999;
  display: flex;
  align-items: stretch;
  width: 100rpx;
}
.li-img{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx 0 0 0;
}
.li-img image{
  width: 32.4%;
  height: 170rpx;
  display: block;
}


/**视频.wxss**/
.item-box .video-title-box {
  width: 100%;
  margin-bottom: 20rpx;
}

.item-box .video-title-box .video-title {
  width: 100%;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}

.item-box .video-image-box {
  height: 400rpx;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position-x: 30rpx;
  position: relative;
}

.video-cover-box{
  height: 100%;
  width: 100%;
  background: #f6f6f6;
  text-align: center;
}

.item-box .video-image-box .video-cover-box .video-image {
  height: 100%;
  width: 100%;
}

.item-box .video {
  height: 400rpx;
  width: 100%;
  margin: 0 30rpx 0 0;
  position: relative;
}

.item-box .video-image-box .video-image-play {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: calc(50% - 40rpx);
  left: calc(50% - 40rpx);
  z-index: 100;
}
