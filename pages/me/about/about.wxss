/* pages/me/about/about.wxss */
.box{
  width: 100%;
  height: 100%;
  padding: 0 66rpx 0 48rpx;
  display: flex;
  flex-direction:column;
  align-items:center;
}
.about-head{
  width: 134rpx;
  height: 134rpx;
  border-radius: 25rpx;
  overflow: hidden;
  box-shadow:-1px 1px 10px #f0f0f0;
  margin-top: 93rpx;
}
.head-pic{
  width: 134rpx;
  height: 134rpx;
  border-radius: 25rpx;
  display: block;
}

.name-box{
  margin-top: 32rpx;
}
.about-name{
  font-size: 28rpx;
}
.about-style{
  font-size: 22rpx;
  color: #666666;
  text-align: center;
}

.text-weight{
  font-size: 28rpx;
  font-weight: bold;
}
.about-text{
  font-size: 28rpx;
  text-align: justify;
  margin-top: 100rpx;
}