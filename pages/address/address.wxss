/* pages/address/address.wxss */
.li-box{
  width: 100%;
  padding: 30rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.12);
  border-top: 8rpx solid #ebebeb;
}
.name-number{
  display: flex;
  align-items: center;
  justify-content:space-between; 
}
.name{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.number{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.address{
  font-size: 28rpx;
  color: #333333;
    font-weight: bold;
    padding: 25rpx 0 30rpx 0;
}
.check-choose{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.choose-left{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #2369ea;
  font-weight: bold;
}
.edit{
  font-size: 26rpx;
  color: #2369ea;
  line-height: 34rpx;
  display: flex;
  padding: 0 20rpx;
}
.edit-icon{
  width: 30rpx;
  height: 30rpx;
  background: url(data:image/png;base64,) no-repeat center / 100% auto;
display: block;
margin-right: 10rpx;
}
.delete-icon{
  width: 24rpx;
  height: 30rpx;
  background: url(data:image/png;base64,) no-repeat center / 100% auto;
  display: block;
margin-right: 10rpx;
}
icon{
  margin-right: 10rpx;
}
.choose-right{
  display: flex;
}
.add-address-input{
  width: 690rpx;
  height: 88rpx;
  background: #2369ea;
  display: flex;
  justify-content:center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
}