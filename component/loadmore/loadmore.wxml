<view class="page">
    <view class="page__bd">
      <block wx:if='{{isShow}}'>
        <view class="weui-loadmore" style="{{isIphoneX ? 'margin-bottom:80rpx;' :''}}">
            <view class="weui-loading"></view>
            <view class="weui-loadmore__tips">正在加载</view>
        </view>
      </block>
      <block wx:else>
        <view class="weui-loadmore" style="{{isIphoneX ? 'margin-bottom:80rpx;' :''}}">
            <view class="weui-loadmore__tips">没有更多了</view>
        </view>
      </block>
    </view>
</view>