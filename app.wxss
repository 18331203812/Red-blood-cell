@import "./utils/weui.wxss";
page{
   font-size: 32rpx;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
view{
  box-sizing: border-box;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 搜索icon */
.search-icon{
  width: 30rpx;
  height: 30rpx;
  background: url(data:image/png;base64,) no-repeat center / 30rpx auto;
}
/* 热 icon */
.heat-icon{
  width: 26rpx;
  height: 32rpx;
  background: url(data:image/png;base64,) no-repeat center / 26rpx auto ;
}
/* 查看 */
.see-icon{
  width: 38rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center / 38rpx auto;
  margin:  0 10rpx;
}
/* 评论首页 */
.message-icon{
  width: 34rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center / 34rpx auto;
  margin:  0 10rpx;
}
/* 评论详情 */
.comment-icon{
  width: 32rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center / 32rpx auto;
  margin: 0 10rpx;
}
/* 未点赞 */
.fabulou-icon{
  width: 32rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center / 32rpx auto;
  margin:  0 10rpx;
}
/* 未点赞（评论） */
.fa-icon{
  width: 32rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center / 32rpx auto;
  margin:  0 10rpx;
}
/* 点赞成功 */
.fabulou-icons{
  height: 100%;
  width: 32rpx;
  background: url(data:image/png;base64,) no-repeat center / 32rpx auto;
   margin:  0 10rpx;
}
/* 分享 */
.share-icon{
  width: 27rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center / 27rpx auto;
  margin:  0 10rpx;
}
button{
  margin: 0;
  padding: 0;
  outline: none;
  border: none;
}
button::after{
   border: none;
}